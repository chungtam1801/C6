@{
    ViewData["Title"] = "ShowPageUploadFile";
}
<div class="row">
    <div class="col-md-5">
        <form method="post" enctype="multipart/form-data" asp-controller="UploadFile" asp-action="UploadFile">
            <div class="form-group">
                <div class="col-md-10">
                    <p>Upload file</p>
                    <input class="form-control" name="files" type="file"/>
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-10">
                    <input type="submit" class="btn btn-success" value="Upload"/>
                </div>
            </div>
        </form>
    </div>
</div>